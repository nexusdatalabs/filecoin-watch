---
import Layout from "../layouts/Layout.astro";
const baseUrl = import.meta.env.BASE_URL;
---

<Layout>
  <header class="site-header landing-hero">
    <a href={baseUrl} aria-label="Filecoin Watch home">
      <img
        src={baseUrl + "favicon.svg"}
        alt="Filecoin Watch"
        width="96"
        height="96"
        decoding="async"
        loading="eager"
        fetchpriority="high"
      />
    </a>

    <h1>Filecoin Watch</h1>

    <p class="subhead">An operational explorer into Filecoin players.</p>

    <nav class="link-row" aria-label="Primary">
      <a class="cta" href={baseUrl + "clients"}>Clients</a>
      <a class="cta" href={baseUrl + "providers"}>Providers</a>
      <a class="cta" href={baseUrl + "allocators"}>Allocators</a>
    </nav>
  </header>
</Layout>

<style>
  .landing-hero {
    min-height: 68vh;
    display: grid;
    place-content: center;
    gap: var(--space-3);
  }

  .landing-hero img {
    width: 96px;
    height: 96px;
  }

  .link-row {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    margin-top: var(--space-2);
  }

  a.cta {
    display: inline-block;
    padding: 0.45rem 0.8rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    background: var(--code-bg);
    font-family: var(--font-monospace);
    letter-spacing: -0.01em;
    position: relative;
  }

  a.cta::before {
    color: var(--muted);
  }

  a.cta:hover {
    background: #f2f2f2;
  }

  a.cta:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }
</style>
